{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./lib",
		"experimentalDecorators": true,
		"strict": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
